pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = //need to add
        AWS_SECRET_ACCESS_KEY = //need to add
    }

    stages {

        /* Begin Template
        stage('template'){
            steps{
                sh 'scripts'
            }
        }
        End template*/

        stage('Setting up database'){
            steps{
                sh 'Jenkins/Scripts/Database/database.sh'
            }
        }

        stage('Testing'){
            steps{
                sh 'Jenkins/Scripts/Test/test_app.sh'
            }
        }

        stage('Build images'){
            withCredentials([string(credentialsId: 'DOCKER_USERNAME', variable: 'DOCKER_USERNAME'), string(credentialsId: 'DOCKER_PASSWORD', variable: 'DOCKER_PASSWORD')]) {
    
        steps{
                sh 'Jenkins/Scripts/Docker/install-docker.sh'
                sh 'Jenkins/Scripts/Docker/build_images.sh'
            }
        }
        }
    }
}
